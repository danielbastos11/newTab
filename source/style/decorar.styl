.decorar {
  display: flex;

  width: 480px;
  margin: 20px auto;
  padding: 5px;

  flex-direction: column;


  &.wrong {
    box-shadow: 0 0 0 1px rgba(222, 170, 170, .5);
    background-color: rgba(222, 170, 170, .1);
    border-radius: 2px;
  }

  &.correct {
    box-shadow: 0 0 0 1px rgb(202, 226, 197, .5);
    background-color: rgba(241, 255, 238, .3);
    border-radius: 2px;
  }

  &.cheating {
    box-shadow: 0 0 0 1px rgba(253, 245, 219, 1);
    background-color: rgba(253, 245, 219, .2);
    border-radius: 2px;
  }

  .ref {
    display: block;
    cursor: default;

    font-size: 14px;
    font-weight: 500;
    color: #000000;
    letter-spacing: 0.93px;
  }

  textarea {
    outline: none;
    resize: none;
    width: 100%;
    height: 200px;

    margin-top: 13px;
    margin-bottom: 13px;
    padding: 1px;

    font-size: 14px;
    color: #000000;
    letter-spacing: 0.93px;
  }

  input.transparent, textarea.transparent {
    &, &:focus {
      outline: none;
      border-color: transparent !important;
      background-color: transparent !important;
      padding: 0em !important;
    }
  }

  .stats {
    align-self: flex-end;

    float: right;
    font-size: 14px;
    color: rgba(0, 0, 0, .37);
    letter-spacing: 0.93px;
  }
}
