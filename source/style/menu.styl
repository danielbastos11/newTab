.title {
  color: #000;

  font-family: 'Ubuntu', sans-serif;
  font-size: 26px;
  letter-spacing: 1.62px;

  margin-top: 44px;
  margin-left: 29px;
}

.top.menu {
  display: flex;
  flex-direction: row;
  align-items: flex-end;

  margin-top: 30px;
  margin-left: 29px;
  margin-right: 35px;

  padding: 0;

  .fill {
    flex-grow: 1;
  }

  li {
    color: #000;
    padding: 10px;

    border-bottom: 1px solid rgba(0,0,0,0.20);

    font-family: 'Ubuntu', sans-serif;
    font-size: 15px;
    font-weight: 400;

    letter-spacing: 0.93px;
    list-style-type: none;
    opacity: 0.7;

    &.active {
      font-weight: 500;
      opacity: 1;
      border-bottom: 1px solid rgba(0,0,0,0.50);
    }
  }

}
